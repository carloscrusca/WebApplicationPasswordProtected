@model WebApplicationPasswordProtected.Models.Todo


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Todo</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assigned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assigned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Done)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Done)
        </dd>


    </dl>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name of files.</th>
                <th>Task</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.GetFiles)
            {
                <tr>
                    <td>
                        <a href="~/uploadfile/@file.Attachment" target="_blank">@file.Descricao></a>

                    </td>
                    <td>@file.TaskID</td>

                </tr>

            }
        </tbody>
    </table>

    


    <a href="/Files/New/@Model.Id" title="Add New" class="btn btn-primary">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        Add New File
    </a>

    




</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


